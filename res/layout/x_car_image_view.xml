<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/x_car_image_margin_left"
              android:layout_marginRight="@dimen/x_car_image_margin_right" >

        <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Suratebiii" />

        <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/x_imageview_width"
                android:layout_height="@dimen/x_imageview_height"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image" />

</LinearLayout>