                    android:text="@string/search_cancel_btn_txt"
                    android:textColor="@color/Gray"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_carTransmission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
